{
  "manifest_version": 3,
  "name": "Bulk Message Deleter",
  "version": "0.1.0",
  "description": "Side-panel extension to preview and delete your own messages with filters",
  "action": {
    "default_title": "Bulk Message Deleter"
  },
  "permissions": ["storage", "sidePanel", "tabs", "scripting"],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://*.messenger.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "https://*.messenger.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
